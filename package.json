{
  "name": "solana-game-dapp",
  "version": "0.1.0",
  "description": "A full-stack Solana game DApp with Rust smart contracts and React frontend",
  "license": "ISC",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "deploy": "anchor deploy",
    "dev:validator": "solana-test-validator --reset",
    "dev:frontend": "cd app && npm run dev",
    "build:frontend": "cd app && npm run build",
    "install:frontend": "cd app && npm install",
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "setup": "npm run install:frontend && anchor build",
    "dev": "concurrently \"npm run dev:validator\" \"npm run dev:frontend\""
  },
  "workspaces": [
    "app"
  ],
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "typescript": "^5.7.3",
    "prettier": "^2.6.2",
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
